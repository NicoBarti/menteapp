<!doctype html>
<html lang="en">
  <head>
    <title>MenteVital | Acerca de </title>
  </head>
  <body>

<div class="container mb-3">
    <%= render 'globalPartials/navlight'%>
</div>

<% @acercas.each do |acerca| %>

<!-- ITEM
================================================== -->
<section class="section pb-0">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-4 order-md-2">

        <!-- Preheading -->
        <p class="font-weight-medium text-xs text-uppercase text-primary">
          <%= acerca.subtitulofoto %>
        </p>

        <!-- Heading -->
        <h3 class="mb-4">
          <%= acerca.titulofoto %>
        </h3>

        <!-- Text -->
        <p class="mb-5 text-muted">
          <%= acerca.texfoto %>
        </p>

      </div>
      <div class="col-12 col-md-8 order-md-1">

        <!-- Image -->
        <img src="<%= 'https://perlinmentevital.s3.us-east-2.amazonaws.com/' + acerca.foto %>" alt="..." class="img-fluid mb-5 w-75" >

        <!-- Nav -->
        <nav class="nav nav-tabs mb-5">
          <a href="#itemDescription" class="nav-item nav-link active" data-toggle="tab">
            <%= acerca.titulopie %>
          </a>
        </nav>

        <!-- Content -->
        <div class="tab-content mb-5">
          <div class="tab-pane fade show active" id="itemDescription">

            <p class="text-sm">
              <%= acerca.texto1 %>
              </p>

            <p class="text-sm">
              <%= acerca.texto2 %>
            </p>

            <p class="mb-0 text-sm">
              <%= acerca.texto3 %>
            </p>

            <p class="mb-0 text-sm">
              <%= acerca.texto4 %>
            </p>

            <p class="mb-0 text-sm">
              <%= acerca.texto5 %>
            </p>

<% end %>
          </div>

        </div>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>
