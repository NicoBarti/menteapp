<!doctype html>
<html lang="en">
  <head>
    <title>MenteVital | Blogs </title>
  </head>
  <body>

    <%= render 'globalPartials/navlight'%>

<!-- BREADCRUMB
================================================== -->
<nav class="breadcrumb">
  <div class="container">
    <div class="row align-items-center">
      <div class="col">

        <!-- Heading -->
        <h5 class="breadcrumb-heading">
          Blog post
        </h5>

      </div>
      <div class="col-auto">

        <!-- Breadcrumb -->
        <span class="breadcrumb-item">
          <a href="<%= url_for(action: 'index', controller: 'mente', target: 'self')%>">MenteVital</a>
        </span>
        <span class="breadcrumb-item active">
          Temas
        </span>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</nav>

<!-- POST
================================================== -->
<section class="section pb-0">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10 col-xl-8">


        <!-- Heading -->
        <h1 class="mb-5 font-weight-bold text-center">
          <%= @blog.titulo %>
        </h1>

      </div>
    </div> <!-- / .row -->
    <div class="row">
      <div class="col-12">

        <!-- Image -->
        <img src="<%= 'https://perlinmentevital.s3.us-east-2.amazonaws.com/' + @blog.img %>" alt="..." class="img-fluid mb-3">

        <!-- Caption -->
        <p class="text-center text-sm text-muted mb-5">
        </p>

      </div>
    </div> <!-- / .row -->
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10 col-xl-8">

        <blockquote class="blockquote">
          <p>
            <%= @blog.comentario %>
          </p>
        </blockquote>

        <p>
            <%= @blog.texto1 %>
        </p>

        <p class="mb-0">
            <%= @blog.texto2 %>
        </p>

        <!-- Social -->
        <div class="row align-items-center py-3 my-5 border-top border-bottom">
          <div class="col">

            <p class="mb-0 text-xs text-uppercase">
              Comparte el post:
            </p>

          </div>
          <div class="col-auto">
            <a href="#!" class="text-lg text-nounderline mx-2">
              <i class="fab fa-facebook"></i>
            </a>
            <a href="#!" class="text-lg text-nounderline mx-2">
              <i class="fab fa-facebook"></i>
            </a>
            <a href="#!" class="text-lg text-nounderline mx-2">
              <i class="fab fa-instagram"></i>
            </a>

          </div>
        </div>

      </div>
    </div> <!-- / .row -->
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10 col-xl-8">

        <!-- Heading -->
        <h3 class="mb-5">
          Comentarios de lectores:
        </h3>

        <!-- Count -->
        <p class="mb-0 text-uppercase text-xs text-muted">
          2 comentarios encontrados
        </p>

        <hr>

        <!-- Form -->
        <form class="mb-5">
          <div class="form-group mb-0">
            <label class="mb-3">
              Agrega tu comentario:
            </label>
            <div class="row no-gutters">
              <div class="col-auto">

                <!-- Avatar -->
                <div class="avatar mr-3">
                  <img src="assets/img/16.jpg" alt="..." class="img-cover">
                </div>

              </div>
              <div class="col">

                <textarea class="form-control"></textarea>

              </div>
            </div> <!-- / .row -->
          </div>
        </form>

        <!-- Comment -->
        <div class="row no-gutters mb-4">
          <div class="col-auto">

            <!-- Avatar -->
            <div class="avatar mr-3">
              <img src="assets/img/18.jpg" alt="..." class="img-cover">
            </div>

          </div>
          <div class="col">

            <!-- Meta -->
            <p class="mb-1 text-muted text-xs">
              by <strong class="text-body">Jane Roe</strong> 15 minutes ago
            </p>

            <!-- Text -->
            <p class="mb-0 text-sm">
              Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci, animi? Hic dignissimos laboriosam est molestiae dolore voluptatum iusto.
            </p>

          </div>
        </div>

        <!-- Comment -->
        <div class="row no-gutters mb-0">
          <div class="col-auto">

            <!-- Avatar -->
            <div class="avatar mr-3">
              <img src="assets/img/17.jpg" alt="..." class="img-cover">
            </div>

          </div>
          <div class="col">

            <!-- Meta -->
            <p class="mb-1 text-muted text-xs">
              by <strong class="text-body">Judy Doe</strong> 17 minutes ago
            </p>

            <!-- Text -->
            <p class="mb-0 text-sm">
              Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci, animi? Hic dignissimos laboriosam est molestiae dolore voluptatum iusto.
            </p>

          </div>
        </div>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>

<!-- FEATURED
================================================== -->
<section>
  <div class="container section pb-0">
    <div class="row align-items-stretch">

        <% @featured.each do |feature| %>
      <div class="col-12 col-lg-4 mb-3 mb-lg-0">

        <a class="card h-100" href="<%= blog_path(feature.id) %>">
          <div class="card-body">

            <!-- Heading -->
            <h4>
                <%= feature.titulo %>
            </h4>

            <!-- Text -->
            <p class="mb-0 text-sm text-muted">
              <%= truncate(feature.texto1, :length => 80, :separator => ' ') %>
            </p>

          </div>
        </a>

      </div>
        <% end %>

<br>
      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>
