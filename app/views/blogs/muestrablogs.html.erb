<!doctype html>
<html lang="en">
  <head>
    <title>MenteVital | Blogs </title>
  </head>
  <body>

    <%= render 'globalPartials/navlight'%>

<!-- BREADCRUMB
================================================== -->
<br>
<nav class="breadcrumb ">
  <div class="container">
    <div class="row align-items-center">
      <div class="col">

        <!-- Heading -->
        <h5 class="breadcrumb-heading">
          Blogs
        </h5>

      </div>
      <div class="col-auto">

        <!-- Breadcrumb -->
        <span class="breadcrumb-item">
          <a href="<%= url_for(action: 'index', controller: 'mente', target: 'self')%>">MenteVital</a>
        </span>
        <span class="breadcrumb-item active">
          Blogs
        </span>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</nav>

<!-- HERO
================================================== -->
<section>
  <div class="container section pb-0">
    <div class="row align-items-center">
      <div class="col-12 col-md-6 offset-xl-1 order-md-2">

        <!-- Image -->
        <!-- <div class="img-effect img-effect-dotted"> -->
          <img src="<%= 'https://perlinmentevital.s3.us-east-2.amazonaws.com/' + @blog.img %>" class="img-fluid" alt="...">
        <!-- </div> -->

      </div>
      <div class="col-12 col-md-6 col-xl-5 order-md-1">

        <!-- Meta -->
        <div class="row align-items-center justify-content-center no-gutters mb-4">
          <div class="col-auto">

            <div class="avatar mr-3">

              <img src="<%= 'https://perlinmentevital.s3.us-east-2.amazonaws.com/' + @autores.find(@blog.autores_id).avatar %>" alt="..." class="img-cover rounded-circle">
            </div>

          </div>
          <div class="col-auto">

            <p class="mb-0 text-xs text-muted">
              por <strong class="text-body"> <%= @autores.find(@blog.autores_id).nombre %> </strong> hace <%= time_ago_in_words(@blog.created_at) %>
            </p>

          </div>
        </div> <!-- / .row -->


        <!-- Heading -->
        <h1 class="mb-4 font-weight-bold">
          <%= @blog.titulo %> </h6>
        </h1>

        <!-- Text -->
        <p class="mb-5 text-muted">
          <%= truncate(@blog.comentario, :length => 200, :separator => ' ')  %> </h6>
        </p>

        <!-- Button -->
        <a href="<%= blog_path(@blog.id) %>" class="btn btn-outline-primary">
          Leer m√°s <i class="fas fa-arrow-right ml-2"></i>
        </a>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>

<!-- FEATURED
================================================== -->
<section>
  <div class="container section pb-0">
    <div class="row align-items-stretch">

        <% @featured.each do |feature|%>
      <div class="col-12 col-lg-4 mb-3 mb-lg-0">

        <a class="card h-100" href="<%= blog_path(feature.id) %>">

          <div class="card-body">

            <!-- Meta -->
            <div class="row align-items-center no-gutters mb-4">
              <div class="col-auto">

                <div class="avatar mr-3">
                  <img src="<%= 'https://perlinmentevital.s3.us-east-2.amazonaws.com/' + @autores.find(feature.autores_id).avatar %>" alt="..." class="img-cover rounded-circle">
                </div>

              </div>
              <div class="col">

                <p class="mb-0 text-xs text-muted">
                  por <strong class="text-body"> <%= @autores.find(feature.autores_id).nombre %> </strong> hace <%= time_ago_in_words(feature.created_at) %>
                </p>

              </div>
            </div> <!-- / .row -->



            <!-- Heading -->
            <h4>
                <%= feature.titulo %>
            </h4>

            <!-- Text -->
            <p class="mb-0 text-sm text-muted">
              <%= truncate(feature.texto1, :length => 80, :separator => ' ') %>
            </p>

          </div>
        </a>

      </div>
        <% end %>


      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>

<!-- LATEST
================================================== -->
<section class="mb-5">
  <div class="container section pb-0">
    <div class="row">

      <div class="col-12 col-md-9 col-lg-10 order-md-1">

<% if @antiguos  %>
      <% @antiguos.each do |antiguo| %>

        <a class="row align-items-center text-nounderline"
        href="<%= blog_path(antiguo.id) %>">
          <div class="col-12 col-md-3">

            <!-- Image -->
            <img src="<%= 'https://perlinmentevital.s3.us-east-2.amazonaws.com/' + antiguo.img %>" alt="..." class="img-fluid mb-3 mb-md-0">

          </div>
          <div class="col-12 col-md-9">

            <!-- Meta -->
            <p class="mb-0 text-xs text-muted">
              por <strong class="text-body"> <%= @autores.find(antiguo.autores_id).nombre %> </strong> hace <%= time_ago_in_words(antiguo.created_at) %>
            </p>


            <!-- Heading -->
            <h4>
                <%= antiguo.titulo %>
            </h4>

            <!-- Text -->
            <p class="mb-0 text-sm text-muted">
            <%= truncate(antiguo.texto1, :length => 80, :separator => ' ') %>
            </p>

          </div>
        </a> <!-- / .row -->

        <hr class="my-4">

      <% end %>
      <% end %>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>
