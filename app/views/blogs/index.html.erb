
<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>

      <tr>
        <th>Fecha</th>
        <th>Titulo</th>
        <th>Image (nombre archibo)</th>
      </tr>
      <% @blogs.each do |t| %>
      <tr>
        <td><%= t.created_at %></td>
        <td><%= t.titulo %></td>
        <td><%= t.img %></td>
        <td><%= link_to 'Mostrar', t %></td>
        <td><%= link_to 'Editar', edit_blog_path(t) %></td>
        <td><%= link_to 'Eliminar', t, method: :delete, data: { confirm: 'Segura?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Blog', new_blog_path %>
